<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.tothc.todolist.fragments.CreateOrModifyTodoFragment"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="32sp"
            android:hint="@string/create_todo_enter_title" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/description_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textMultiLine"
            android:hint="@string/create_todo_description_hint" />

        </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/create_todo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_todo_choose_place"/>

        <com.devspark.robototextview.widget.RobotoButton
            android:id="@+id/create_todo_change_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_todo_change_position_button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/create_todo_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_todo_start_time"/>

        <com.devspark.robototextview.widget.RobotoButton
            android:id="@+id/create_todo_change_start_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_todo_start_time_label"/>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/estimated_time_number_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_todo_estimated_time_label"
            android:inputType="number">
        </com.devspark.robototextview.widget.RobotoEditText>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding"
        android:orientation="horizontal">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/completed_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_todo_completed_checkbox_label"
            android:textSize="24sp">
        </com.devspark.robototextview.widget.RobotoTextView>

        <com.devspark.robototextview.widget.RobotoCheckBox
            android:id="@+id/completed_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.devspark.robototextview.widget.RobotoCheckBox>

    </LinearLayout>

    <com.devspark.robototextview.widget.RobotoButton
        android:id="@+id/save_created_todo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:text="@string/create_todo_save_button_text"/>

</LinearLayout>
