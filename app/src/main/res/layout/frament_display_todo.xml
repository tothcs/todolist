<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.tothc.todolist.fragments.DisplayTodoFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="@string/display_todo_title_label" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/display_todo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/display_todo_description_label" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/display_todo_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/display_todo_address_label" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/display_todo_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoButton
            android:id="@+id/display_todo_weather_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_todo_weather_button_label"/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/display_todo_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/display_todo_start_time_label" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/display_todo_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/display_todo_estimated_time_label" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/display_todo_estimated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/display_todo_measured_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/display_todo_measured_time_label" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/display_todo_measured_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/input_horizontal_padding"
        android:paddingRight="@dimen/input_horizontal_padding"
        android:paddingTop="@dimen/input_vertical_padding"
        android:paddingBottom="@dimen/input_vertical_padding">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/display_todo_status_label" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/display_todo_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
